<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">

    <grid name="category-grid" title="Category" model="com.vnbig.operation.db.Category" canDelete="false" orderBy="-cd">
        <field name="fatherId"/>
        <field name="name"/>
        <field name="rank"/>
        <field name="language"/>
        <field name="client"/>
        <field name="enabled"/>
        <field name="cd"/>
    </grid>
    <form name="category-form" title="Category" model="com.vnbig.operation.db.Category" canDelete="false" width="large">
        <panel title="Category" itemSpan="4">
            <field name="cd" title="Cd" readonly="true"/>
            <field name="cu" title="Cu" readonly="true"/>
            <field name="lmd" title="Lmd" readonly="true"/>
            <field name="lmu" title="Lmu" readonly="true"/>
            <field name="ve" title="Ve" readonly="true"/>
            <field name="val" title="Val" readonly="true"/>
            <field name="language"/>
            <field name="name"/>
            <field name="client"/>
            <field name="rank"/>
            <field name="enabled"/>
        </panel>
    </form>

</object-views>
