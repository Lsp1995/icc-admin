<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">

    <grid name="activity-grid" title="Activity" model="com.vnbig.operation.db.Activity" canDelete="false">
        <field name="name"/>
        <field name="startTime"/>
        <field name="endTime"/>
        <field name="awardName"/>
        <field name="awardCurrency"/>
        <field name="awardAmount"/>
        <field name="totalAmount"/>
        <field name="transactionAmount"/>
        <field name="type" title="Types"/>
        <field name="transactionCurrency"/>
    </grid>
    <form name="activity-form" title="Activity" model="com.vnbig.operation.db.Activity" canDelete="false" width="large">
        <panel title="Activity" itemSpan="4">
            <field name="cd" title="Cd" readonly="true"/>
            <field name="cu" title="Cu" readonly="true"/>
            <field name="lmd" title="Lmd" readonly="true"/>
            <field name="lmu" title="Lmu" readonly="true"/>
            <field name="ve" title="Ve" readonly="true"/>
            <field name="val" title="Val" readonly="true"/>
            <field name="name"/>
            <field name="startTime"/>
            <field name="endTime"/>
            <field name="currency"/>
            <field name="amount"/>
            <field name="totalAmount"/>
            <field name="type"/>
        </panel>
    </form>

</object-views>
